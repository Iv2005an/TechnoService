<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TechnoService.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TechnoService.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="16,0,0,8" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Настройки" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,16,0,0"/>
        <TextBox Header="Имя:" PlaceholderText="Имя"  Width="500"/>
        <TextBox Header="Логин:" PlaceholderText="Имя"  Width="500"/>
        <PasswordBox Header="Пароль:" PlaceholderText="Пароль"  Width="500"/>
        <PasswordBox Header="Новый пароль:" PlaceholderText="Пароль"  Width="500"/>
        <PasswordBox Header="Повторите пароль:" PlaceholderText="Пароль"  Width="500"/>
        <Button Content="Сохранить" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch"/>
    </StackPanel>
</Page>
